{
  "name": "ecommerce-app",
  "version": "1.0.0",
  "description": "E-commerce application with React frontend and Node.js backend",
  "main": "server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "trace-deps": "node --trace-deprecation server.js",
    "server": "nodemon server.js",
    "client": "cd ../frontend && npm start",
    "install-all": "npm install && cd ../frontend && npm install",
    "start-all": "concurrently \"npm run server\" \"npm run client\"",
    "test": "jest --watchAll",
    "seed": "node src/utils/seeder.js",
    "seed:destroy": "node src/seeder.js -d"
  },
  "keywords": [
    "ecommerce",
    "react",
    "node",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.0.3",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.3",
    "nodemon": "^2.0.22",
    "rate-limit-redis": "^4.2.0",
    "react-hook-form": "^7.57.0",
    "stripe": "^18.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
